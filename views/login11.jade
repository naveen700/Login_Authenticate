extends layout

block content
 .container-login100(style="background-image: url('images/bg-01.jpg');")
      .wrap-login100.p-l-55.p-r-55.p-t-80.p-b-30
        form.login100-form.validate-form(method = 'post' ,action = '/users/login')
          span.login100-form-title.p-b-37
            | Sign In
          .wrap-input100.validate-input.m-b-20(data-validate='Enter username or email')
            input.input100(type='text', name='username', placeholder='username or email')
            span.focus-input100
          .wrap-input100.validate-input.m-b-25(data-validate='Enter password')
            input.input100(type='password', name='password', placeholder='password')
            span.focus-input100
          .container-login100-form-btn
            button.login100-form-btn(type ='submit', name='submit')
              | Sign In
          .text-center.p-t-57.p-b-20
            span.txt1
              | Or login with
          .flex-c.p-b-112
            a.login100-social-item(href='#')
              i.fa.fa-facebook-f
            a.login100-social-item(href='#')
              img(src='images/icons/icon-google.png', alt='GOOGLE')
          .text-center
            a.txt2.hov1(href='#')
              | Sign Up
